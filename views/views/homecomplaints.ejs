  <body>

    <div class="gut m-5" id="complain">
        <h4 class="head text-center">REGISTER COMPLAINT</h4>
        <form action="/sampledata/complaints" method="post" class="ml-5 mb-5">
          <div>
            <label for="User_Id">Name:&nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</label>
            <input type="text" id="User_Id" name="User_Id">
          </div>
            <div>
                <label for="category">Complaint on: &nbsp;</label>
                <select name="category" id="category">
                    <option value="Water">Cleanliness</option>
                    <option value="Elcectricity" selected>Visiting hours</option>
                    <option value="Property">Recieve public</option>
                </select>
            </div>
            <div>
                <label for="area">Select Area: &nbsp; &nbsp; &nbsp;</label>
                <select name="area" id="area">
                  <option value="Amaravati">Amaravati</option>
                  <option value="Aranya">Aranya</option>
                  <option value="Asramam">Asramam</option>
                  <option value="Balaya kota">Balaya Kota</option>
                  <option value="Baroda">Baroda</option>
                  <option value="Begam pet">Begam pet</option>
                  <option value="Chilakalur">Chilakalur</option>
                  <option value="Dhone">Dhone</option>
                  <option value="Gooty">Gooty</option>
                  <option value="Guntakal">Guntakal</option>
                  <option value="Kadapa">Kadapa</option>                            
                  <option value="Kurnool">Kurnool</option>                            
                  <option value="Janagam">Janagam</option>
                  <option value="Tadipatri">Tadipatri</option>
                </select>
            </div>
            <div>
                Complaint: <br><textarea name="complaint" cols="150" rows="10"></textarea>
            </div>
            <div >
                <input class="btn btn-warning mb-4"  type="submit" name="add" value="Submit Now">
            </div>
        </form>
    </div>

