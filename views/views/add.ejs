<!doctype html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <title>Form</title>
   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   <style>
    *{
	padding: 0;
	margin: 0;
}
body{
  background: url(http://wrbbradio.org/wp-content/uploads/2016/10/grey-background-07.jpg) no-repeat center fixed;
  background-size: cover;
}

.container{
	background: #2d3e3f;
	width: 350px;
	height: 500px;
	padding-bottom: 20px;
	position: absolute;
	top:50%;
	left: 50%;
	transform: translate(-50%, -50%);
	margin: auto;
  padding: 70px 50px 20px 50px;
}


.fl{
	float: left;
  width: 110px;
  line-height: 35px;
}

.fontLabel{
  color: white;
}

.fr{
	float: right;
}

.clr{
	clear: both;
}

.box{
	width: 360px;
	height: 35px;
	margin-top: 10px;
	font-family: verdana;
	font-size: 12px;
}

.textBox{
	height: 35px;
	width: 190px;
	border: none;
  padding-left: 20px;
}

.new{
  float: left;
}

.iconBox{
	height: 35px;
	width: 40px;
	line-height: 38px;
	text-align: center;
  background: #fde61e;
}

.radio{
	color: white;
	background: #2d3e3f;
	line-height: 38px;
}

.terms{
	line-height: 35px;
	text-align: center;
	background: #2d3e3f;
	color: white;
}

.submit{
	float:right;
	border: none;
	color: white;
	width: 110px;
	height: 35px;
	background: #ee3434;
	text-transform: uppercase;
  cursor: pointer;
}

::-webkit-input-placeholder { 

}


   </style>  
</head>
  <body>
  
  	<div class="container">
      <form method="post" autocomplete="on">
        <div class="box">
            <label for="crim_id" class="fl fontLabel"> Criminal_id: </label>
                  <div class="fl iconBox"><i class="fa fa-user" aria-hidden="true"></i></div>
                  <div class="fr">
                          <input type="text" required name="Criminal_id" maxlength="10" placeholder="Criminal_id" class="textBox">
                  </div>
                  <div class="clr"></div>
              </div>
      
    		<div class="box">
          <label for="First_Name" class="fl fontLabel"> Full Name: </label>
    			<div class="new iconBox">
            <i class="fa fa-user" aria-hidden="true"></i>
          </div>
    			<div class="fr">
    					<input type="text" name="First_Name" placeholder="First Name"
              class="textBox" autofocus="on" required>
    			</div>
    			<div class="clr"></div>
    		</div>
    	
            
    
    		<div class="box">
          <label for="Age" class="fl fontLabel"> Age: </label>
    			<div class="fl iconBox"><i class="fa fa-user" aria-hidden="true"></i></div>
    			<div class="fr">
    					<input type="text" required name="Age" maxlength="10" placeholder="Age" class="textBox">
    			</div>
    			<div class="clr"></div>
    		</div>
            <div class="box">
                <label for="Years_of_prison" class="fl fontLabel"> Years_of_prison: </label>
                      <div class="fl iconBox"><i class="fa fa-user" aria-hidden="true"></i></div>
                      <div class="fr">
                              <input type="text" required name="Years_of_prison" maxlength="10" placeholder="Years_of_prison" class="textBox">
                      </div>
                      <div class="clr"></div>
                  </div>
    		
    		<div class="box">
          <label for="Subjail_no" class="fl fontLabel"> Subjail_no.: </label>
    			<div class="fl iconBox"><i class="fa fa-user" aria-hidden="true"></i></div>
    			<div class="fr">
    					<input type="text" required name="Subjail_no" placeholder="Subjail_no" class="textBox">
    			</div>
    			<div class="clr"></div>
    		</div>
			<div class="box">
				<label for="Crime_id" class="fl fontLabel"> Crime_id: </label>
					  <div class="fl iconBox"><i class="fa fa-user" aria-hidden="true"></i></div>
					  <div class="fr">
							  <input type="text" required name="Crime_id" placeholder="Crime_id" class="textBox">
					  </div>
					  <div class="clr"></div>
				  </div>
				  <div class="box">
					<label for="eye_color" class="fl fontLabel"> Eye_color: </label>
						  <div class="fl iconBox"><i class="fa fa-user" aria-hidden="true"></i></div>
						  <div class="fr">
								  <input type="text" required name="eye_color" placeholder="eye_color" class="textBox">
						  </div>
						  <div class="clr"></div>
					  </div>
					  <div class="box">
						<label for="Marital_status" class="fl fontLabel"> Marital_status: </label>
							  <div class="fl iconBox"><i class="fa fa-user" aria-hidden="true"></i></div>
							  <div class="fr">
									  <input type="text" required name="Marital_status" placeholder="Marital_status" class="textBox">
							  </div>
							  <div class="clr"></div>
						  </div>
    		
    		<div class="box radio">
          <label for="Gender" class="fl fontLabel"> Gender: </label>
    				<input type="radio" name="Gender" value="M" required> Male &nbsp; &nbsp; &nbsp; &nbsp;
    				<input type="radio" name="Gender" value="F" required> Female
    		</div>
			<div class="box radio">
				<label for="Handicapped" class="fl fontLabel"> Handicapped: </label>
						  <input type="radio" name="Handicapped" value="Yes" required> Yes &nbsp; &nbsp; &nbsp; &nbsp;
						  <input type="radio" name="Handicapped" value="No" required> No
			</div>
    		<div class="box" style="background: #2d3e3f">
    				<input type="Submit" name="add_crim" class="submit" value="Add">
    		</div>

    	
      </form>
  </div>
  
  </body>
</html>
